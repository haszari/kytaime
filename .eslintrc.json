{
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-console": 0,
    "space-in-parens": [ "error", "always" ],
    "space-before-function-paren": [ "error", "never" ],
    "semi": [ "error", "always" ],
    "template-curly-spacing": [ "error", "always" ],
    "comma-dangle": [ "error", "always" ],
    "array-bracket-spacing": [ "error", "always" ]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}